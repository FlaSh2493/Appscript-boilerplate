{
  "private": true,
  "name": "appscript-boilderplate",
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "pre-commit": "lint-staged",
    "dev": "TARGET_ENV=localhost vite --mode dev",
    "build:prod": "rm -rf dist && npm run check-types && npm run server-check-types && vite build --config vite.config.ts --mode prod && npm run build:server",
    "build:dev": "rm -rf dist && npm run check-types && npm run server-check-types && vite build --config vite.config.ts --mode dev && npm run build:server",
    "build:server": "tsc --project tsconfig.server.json && cp server/appsscript.json dist/appsscript.json",
    "build:server:watch": "tsc --project tsconfig.server.json --watch",
    "build:watch": "vite build --watch",
    "clasp:login": "clasp login",
    "clasp:push-dev": "clasp push --project .clasp.dev.json",
    "clasp:push-prod": "clasp push --project .clasp.prod.json",
    "migrate:dev": "pnpm build:dev && pnpm clasp:push-dev",
    "migrate:prod": "pnpm build:prod && pnpm clasp:push-prod",
    "check-types": "tsc --noEmit",
    "server-check-types": "tsc --project tsconfig.server.json --noEmit",
    "lint": "eslint --ext src/**/*.{js,ts,tsx} --report-unused-disable-directives",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,json,css,scss,md}\"",
    "preview": "vite preview",
    "test": "vitest --run --passWithNoTests",
    "test:watch": "vitest --watch",
    "test:ui": "vitest --ui"
  },
  "dependencies": {
    "@tanstack/react-virtual": "^3.8.3",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.22.0"
  },
  "devDependencies": {
    "@google/clasp": "^3.0.6-alpha",
    "@suspensive/react": "^1.26.3",
    "@tanstack/react-query": "^5.22.2",
    "@tanstack/react-table": "^8.10.7",
    "@types/google-apps-script": "^2.0.5",
    "@types/node": "^20.11.6",
    "@types/react": "^18.2.55",
    "@types/react-dom": "^18.2.19",
    "@types/react-router-dom": "^5.3.3",
    "@vanilla-extract/css": "^1.13.0",
    "@vanilla-extract/dynamic": "^2.1.0",
    "@vanilla-extract/recipes": "^0.5.0",
    "@vanilla-extract/vite-plugin": "^3.9.0",
    "@vitejs/plugin-react": "^4.2.1",
    "@vitest/ui": "^0.34.6",
    "date-fns": "^3.6.0",
    "dayjs": "^1.11.10",
    "fast-glob": "^3.3.3",
    "jose": "^6.1.2",
    "jsdom": "^22.1.0",
    "msw": "^2.3.0",
    "prettier": "^3.6.2",
    "rollup-plugin-visualizer": "^5.11.0",
    "terser": "^5.22.0",
    "tsc-files": "^1.1.4",
    "typescript": "5.4.5",
    "undici": "^5.28.0",
    "vite": "^5.1.0",
    "vite-plugin-singlefile": "^2.3.0",
    "vite-tsconfig-paths": "^4.2.1",
    "vitest": "^0.34.6"
  },
  "keywords": [
    "appsscript",
    "google",
    "google appsscript"
  ],
  "publishConfig": {
    "registry": "https://npm.pkg.github.com/"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/FlaSh2493/Appscript-boilerplate"
  },
  "msw": {
    "workerDirectory": [
      "public"
    ]
  }
}
